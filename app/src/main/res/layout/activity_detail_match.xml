<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:visibility="visible"
            android:id="@+id/detail_pb"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".DetailMatchActivity">

            <TextView
                android:id="@+id/detail_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/date" />

            <ImageView
                android:id="@+id/detail_home_team_logo_iv"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/home_team_cd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_date_tv" />

            <TextView
                android:id="@+id/detail_home_team_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/detail_home_team_logo_iv"
                app:layout_constraintStart_toStartOf="@+id/detail_home_team_logo_iv"
                app:layout_constraintTop_toBottomOf="@+id/detail_home_team_logo_iv"
                tools:text="@string/home_team" />

            <ImageView
                android:id="@+id/detail_away_team_logo_iv"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/away_team_cd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/detail_home_team_logo_iv" />

            <TextView
                android:id="@+id/detail_away_team_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/detail_away_team_logo_iv"
                app:layout_constraintStart_toStartOf="@+id/detail_away_team_logo_iv"
                app:layout_constraintTop_toBottomOf="@+id/detail_away_team_logo_iv"
                tools:text="@string/away_team" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/statistic_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_home_formation_tv" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/detail_home_goal_tv" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shot_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/detail_home_shot_tv" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lineup_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="@+id/detail_home_shot_tv"
                app:layout_constraintTop_toBottomOf="@+id/barrier_shot_label" />

            <TextView
                android:id="@+id/detail_home_formation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/detail_home_team_name_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_home_team_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/detail_home_team_name_tv"
                tools:text="@string/formation_strategy" />

            <TextView
                android:id="@+id/detail_away_formation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/detail_away_team_name_tv"
                app:layout_constraintStart_toStartOf="@+id/detail_away_team_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/detail_away_team_name_tv"
                tools:text="@string/formation_strategy" />

            <TextView
                android:id="@+id/detail_home_goal_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/barrier_left_midle_label"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:text="@string/goals" />

            <TextView
                android:id="@+id/detail_away_goal_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrier_right_midle_label"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                tools:text="@string/goals" />

            <android.support.constraint.Barrier
                android:id="@+id/barrier_goal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="detail_home_goal_tv, detail_away_goal_tv" />

            <TextView
                android:id="@+id/detail_home_shot_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/barrier_left_midle_label"
                app:layout_constraintStart_toStartOf="@+id/detail_home_goal_tv"
                app:layout_constraintTop_toBottomOf="@+id/barrier_goal_label"
                tools:text="@string/shots" />

            <TextView
                android:id="@+id/detail_away_shot_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/detail_away_goal_tv"
                app:layout_constraintStart_toEndOf="@+id/barrier_right_midle_label"
                app:layout_constraintTop_toBottomOf="@+id/barrier_goal_label"
                tools:text="@string/many_player" />

            <android.support.constraint.Barrier
                android:id="@+id/barrier_shot_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="detail_home_shot_tv, detail_away_shot_tv" />

            <android.support.constraint.Barrier
                android:id="@+id/barrier_left_midle_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="left"
                app:constraint_referenced_ids="textView3, textView2, textView12, textView13, textView14, textView15, textView16" />

            <android.support.constraint.Barrier
                android:id="@+id/barrier_right_midle_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="right"
                app:constraint_referenced_ids="textView2, textView3, textView12, textView13, textView14, textView15, textView16" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/goalkeeper_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/detail_goalkeeper_home_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/barrier_left_midle_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView12"
                tools:text="@string/many_player" />

            <TextView
                android:id="@+id/detail_goalkeeper_away_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/barrier_right_midle_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView12"
                tools:text="@string/single_player" />

            <android.support.constraint.Barrier
                android:id="@+id/barrier_goalkeeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="detail_goalkeeper_home_name_tv,detail_goalkeeper_away_name_tv" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/defense_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier_goalkeeper" />

            <TextView
                android:id="@+id/detail_defense_home_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/barrier_left_midle_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView13"
                tools:text="@string/single_player" />

            <TextView
                android:id="@+id/detail_defense_away_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrier_right_midle_label"
                app:layout_constraintTop_toTopOf="@+id/textView13"
                tools:text="@string/many_player"/>

            <android.support.constraint.Barrier
                android:id="@+id/barrier_defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="detail_defense_home_name_tv,detail_defense_away_name_tv" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/midfield_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier_defense" />

            <TextView
                android:id="@+id/detail_midfielder_home_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/barrier_left_midle_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView14"
                tools:text="@string/many_player"/>

            <TextView
                android:id="@+id/detail_midfielder_away_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrier_right_midle_label"
                app:layout_constraintTop_toTopOf="@+id/textView14"
                tools:text="@string/single_player"/>

            <android.support.constraint.Barrier
                android:id="@+id/barrier_midfielder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="detail_midfielder_home_name_tv,detail_midfielder_away_name_tv" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/forward_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier_midfielder" />

            <TextView
                android:id="@+id/detail_forward_home_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/barrier_left_midle_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView15"
                tools:text="@string/single_player"/>

            <TextView
                android:id="@+id/detail_forward_away_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/barrier_right_midle_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView15"
                tools:text="@string/many_player"/>

            <android.support.constraint.Barrier
                android:id="@+id/barrier_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="detail_forward_home_name_tv,detail_forward_away_name_tv" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/substitute_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barrier_forward" />

            <TextView
                android:id="@+id/detail_substitute_home_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/barrier_left_midle_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView16"
                tools:text="@string/many_player" />

            <TextView
                android:id="@+id/detail_substitute_away_name_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/barrier_right_midle_label"
                app:layout_constraintTop_toTopOf="@+id/textView16"
                tools:text="@string/single_player" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/versus_label"
                app:layout_constraintBottom_toTopOf="@+id/detail_home_team_name_tv"
                app:layout_constraintEnd_toStartOf="@+id/detail_away_team_logo_iv"
                app:layout_constraintStart_toEndOf="@+id/detail_home_team_logo_iv"
                app:layout_constraintTop_toTopOf="@+id/detail_home_team_logo_iv" />

            <TextView
                android:id="@+id/detail_home_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintBottom_toTopOf="@+id/detail_home_team_name_tv"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/detail_home_team_logo_iv"
                app:layout_constraintTop_toTopOf="@+id/detail_home_team_logo_iv"
                android:text="@string/home_score" />

            <TextView
                android:id="@+id/detail_away_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintBottom_toTopOf="@+id/detail_away_team_name_tv"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintEnd_toStartOf="@+id/detail_away_team_logo_iv"
                app:layout_constraintTop_toTopOf="@+id/detail_away_team_logo_iv"
                android:text="@string/home_score" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</ScrollView>